@using Microsoft.AspNetCore.Identity
@using VALCOBulkSMSAlertSystem.Areas.Identity.Data;
@inject SignInManager<VALCOUser> SignInManager
@inject UserManager<VALCOUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
    {
        @*<li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Messages" asp-action="Dashboard">Dashboard</a>
        </li>*@
        <li class="nav-item">
            <a class="nav-link text-dark_2" asp-area="" asp-controller="Messages" asp-action="Index">Messages</a>
        </li>        
        <li class="nav-item">
            <a class="nav-link text-dark_2" asp-area="" asp-controller="Contacts" asp-action="Index">Contacts</a>
        </li>
        @if (User.IsInRole("Administrators"))
        {
            <li class="nav-item">
                <a class="nav-link text-dark_2" asp-area="" asp-controller="UserSettings" asp-action="Index">Users</a>
            </li>

            <li class="nav-item">
                <a class="nav-link text-dark_2" asp-area="Identity" asp-page="/Account/Register">Register</a>
            </li>
        }
        <li class="nav-item">
            <a class="nav-link text-dark_2" style="color: darkorange" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!.Split("@")[0]</a>
        </li>
        <li class="nav-item">
            <form  class="" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark_2">Logout</button>
            </form>
            @*<a class="nav-link" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">Logout</a>*@
        </li>
    }
    else
    {    
        <li class="nav-item">
            <a class="nav-link btn btn-link text-dark_2" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
    </ul>
