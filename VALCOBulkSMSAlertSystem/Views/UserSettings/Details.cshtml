@model VALCOBulkSMSAlertSystem.Areas.Identity.Data.VALCOUser

<h1>User Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Username:</dt>
        <dd class="col-sm-10">@Model.UserName</dd>
        <dt class="col-sm-2">Email:</dt>
        <dd class="col-sm-10">@Model.Email</dd>
        <dt class="col-sm-2">Email Status:</dt>
        <dd class="col-sm-10">@Model.EmailConfirmed</dd>
    </dl>

    <form asp-action="Details">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <a asp-action="Index" class="btn btn-secondary">Users</a>
        </div>
    </form>
</div>
